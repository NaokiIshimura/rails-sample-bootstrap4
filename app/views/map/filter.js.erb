// フィルタの背景色を変更
<% @filter_list.each do |filter_name| %>

  $('#<%= filter_name %>').css('background-color', 'yellow');
  $('#<%= filter_name %>').attr('onmouseover', 'this.style.backgroundColor=\'red\'');
  $('#<%= filter_name %>').attr('onmouseout', 'this.style.backgroundColor=\'yellow\'');

<% end %>

